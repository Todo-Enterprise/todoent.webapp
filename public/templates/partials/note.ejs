<div class="note-container columns is-gapless has-mt-4 has-mb-4 
  <%= (note.isDone) ? 'is-done' : '' %> 
  <%= (note.isHidden) ? 'is-hidden' : '' %>" data-id=<%= note.id %>>

  <div class="column is-narrow has-ml-3 has-mr-3">
    <div class="checkmark has-mt-3 has-pt-1">
      <div class="icon is-small is-flex">
        <i class="fas fa-check"></i>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card">
      <header class="card-header is-shadowless">
        <p class="card-header-title">
          <input class="input is-borderless is-shadowless is-marginless is-paddingless"
            style="margin-right: 10px; padding-right: 0;" type="text" required="required" placeholder="Note name" value="<%= note.title %>">
        </p>
        <a href="#" class="card-header-icon is-paddingless" aria-label="more options">
          <div class="loader is-hidden"></div>
          <span class="icon has-text-grey-dark note-dropdown">
            <i class="fas fa-angle-down" aria-hidden="true"></i>
          </span>
        </a>
      </header>
      <div class="card-content">
        <textarea class="content has-text-grey-dark"><%= note.content %></textarea>
      </div>
      <footer class="card-footer">
        <a class="card-footer-item save-btn">Save</a>
        <a class="card-footer-item delete-btn">Delete</a>
      </footer>
    </div>
  </div>
</div>
