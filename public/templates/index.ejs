<!DOCTYPE html>
<html>

<head>
  <title>TODO Enterprise</title>
  <link rel="stylesheet" type="text/css" href="/public/styles/styles.css">
</head>

<body>
  <div class="header">
    <div class="title"><a href="/">TODO Enterprise</a></div>
    
    <div class="menu">
      <div><a href="about">About</a></div>
    </div>
  </div>
 
  <div class="container">
    <div class="task-input-field">
      <form id="taskInputForm" action="/add-task" method="post">
        <input class="task-input" name="task" size="12x" type="text">
        <button class="btn-add-new-task" type="submit">Add new task</button>
      </form>
    </div>
  </div>

  <div class="container">
    <% tasks.forEach(function(task) { %>
      <% if (task.isDone == true) { %>
        <div class="done">
      <% } else { %>
        <div class="task">
      <% } %>
        <div class="finish-button">
          <div class="check"></div>
        </div>        
          <%= task.name %>          
        </div>
    <% }); %>
  </div>
</body>

<script type="text/javascript" src="/public/scripts/scripts.js"></script>

</html>
